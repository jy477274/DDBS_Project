<!DOCTYPE html>
<html lang="en">

<head>
  <title>Basic User Information</title>
</head>

 
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Blog</title>
</head>
<body>
  <div class="container">
    <h1 class="mb-4">All Articles</h1>

  <label for="user"><% if(user_id==null) {%> 
    No user selected
  <%} else { %>
    Current user = User<%=user_id%>
  <%}%>, select a new user here:</label>
    <body>
      <form action="/" method="GET">
        UserId: <input type="text" name="user_id">
        <input type="submit" value="submit">        
      </form>
    </body>
    <br></br>

    <form action="/read" method="GET">
      <input class="btn btn-success" value="Read by User" type="submit">     
    </form>

    <% articles.forEach(article => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= article.title %></h4>
          <div class="card-subtitle text-muted mb-2">
            <%= article.category %> 
          </div>
          <div class="card-text mb-2"><%= article.abstract %></div>
          <a href="/show/<%= article.aid %>" class="btn btn-primary">Read More</a>
          <form action="/del/<%= article.aid %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>